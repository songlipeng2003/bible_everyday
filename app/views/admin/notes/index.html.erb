<h1>灵修管理</h1>

<%= link_to '添加灵修', new_admin_note_path %>

<table class="table">
  <thead>
    <tr>
      <th>Id</th>
      <th>标题</th>
      <th>创建时间</th>
      <th>更新时间</th>
      <th colspan="3">操作</th>
    </tr>
  </thead>

  <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td><%= note.id %></td>
        <td><%= note.title %></td>
        <td><%= note.created_at %></td>
        <td><%= note.updated_at %></td>
        <td><%= link_to '显示', admin_note_path(note) %></td>
        <td><%= link_to '编辑', edit_admin_note_path(note) %></td>
        <td><%= link_to '删除', admin_note_path(note), method: :delete, data: { confirm: '你确认吗?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @notes %>
